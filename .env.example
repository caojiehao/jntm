# 基你太美 - 环境变量配置示例文件
# 复制此文件为 .env 并填入实际值

# MySQL数据库配置
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=jntm
MYSQL_USER=jntm_user
MYSQL_PASSWORD=123456

# Redis缓存配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT认证配置
JWT_SECRET=JNTM-Super-Secret-Key-For-JWT-Token-Generation

# Python AI服务配置
PYTHON_AI_SERVICE_URL=http://localhost:5081

# AI服务API密钥
DEEPSEEK_API_KEY=your_deepseek_api_key_here
QWEN_API_KEY=your_qwen_api_key_here

# 腾讯云OCR服务配置
TENCENT_SECRET_ID=your_tencent_secret_id_here
TENCENT_SECRET_KEY=your_tencent_secret_key_here
TENCENT_REGION=ap-beijing

# 文件上传配置
UPLOAD_PATH=./uploads

# 应用配置
SPRING_PROFILES_ACTIVE=dev

# CORS配置（生产环境）
CORS_ORIGIN=https://your-domain.com